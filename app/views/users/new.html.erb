  <label for ="username" >Username </label><br>
  <input type = "text" placeholder="username" name="user[username]"><br>

  <label for="email">E-mail </label><br>
  <input type = "email" placeholder="E-mail" name="user[email]"><br>

  <label for ="password"> Password </label><br>
  <input type="password" placeholder="enter a password" name="user[password]"><br>

  <input type="submit" name="commit" value="Submit form" >
</form>



